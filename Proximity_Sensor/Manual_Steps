# 1. Install dependencies
sudo apt-get update
sudo apt-get install gcc g++ python3 libjansson-dev nlohmann-json3-dev libssl-dev python3-pip

# 2. Download WebSocket header
mkdir -p simple-websocket-server
wget https://raw.githubusercontent.com/eidheim/Simple-WebSocket-Server/master/ws_server_ws.hpp \
     -O simple-websocket-server/server_ws.hpp

# 3. Install Python packages
pip3 install websocket-client pandas matplotlib

# 4. Compile and run
./run-project.sh




# Build and run with Docker Compose
docker-compose up --build

# Run in background
docker-compose up -d

# View logs
docker-compose logs -f

# Stop everything
docker-compose down



